
  <div class="content">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="studio-card">
          <h1><%= @item.name %></h1>
          <h3>Category: <%= @item.category %></h3>
          <h3>Quantity: <%= @item.quantity %><%= @item.indicator %></h3>
          <p>Seller: <%= @item.user.first_name %></p>
          <p>Seller mail address: <%= @item.user.email %></p>
          <p><%= @item.description %></p>


          <div class="message">
            <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
            <div class="message-name">
              <h3>Gab Dehan</h3>
              <p>10/07/17</p>
            </div>
            <div class="message-body">
              <p><strong>Best in Detroit!</strong></p>
              <p>
                AMAZING POTATOS FROM THIS FARM
              </p>
            </div>
            <div class="message-status">
              <p class="status pending">Pending</p>
              <p class="price">€345</p>
            </div>
          </div>

          <%= render 'reviews/form', user: @user, review: @review %>
          <p> </p>
          <p> </p>
          <p> </p>
          <p> </p>
          <div class="btn-buy"> <%= link_to "Buy", new_item_booking_path(@item) , class: "btn btn-primary" %>
          </div>
          <div class="btn-search">
           <a><strong><%= link_to "Back to Search", root_path %></strong></a>–
          </div>
        </div>
      </div>


      <div class="col-xs-12 col-md-6">

        <div class="studio-image">
          <div>
            <% if @item.photo? %>
              <h1><%= cl_image_tag @item.photo.path, width: 400, height: 400, crop: :fill %></h1>
            <% else %>
              <h1><%= image_tag "banana.png", :size => "400x400" , :alt =>"ll" %></h1>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>



