<div class="banner">
  <div class="banner-content text-center">
    <h1>Buy local from your neighbors!</h1>
    <p>GrowShare brings the farmer's market to your community</p>
    <%= simple_form_for :item, method: :get do |f| %>
    <%#= simple_form_for :item, :url => {:action => "index"} do |f| %>
    <%= f.input :search, placeholder: "search fruits..."%>
    <%= f.button :submit, "Search" %>
    <% end %>
    <% @items.each do |item| %>
    <p><%= link_to item.name, item_path(item) %></p>
    <% end %>
    <%= link_to "Sign Up", new_user_session_path, class: "btn btn-lg btn-primary"  %>
  </div>
</div>
