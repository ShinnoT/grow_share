
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%)>
    <%= image_tag "background2.png" %>
      <div class="banner-content">
        <h1>Buy Local Produce from your neighbors!</h1>

        <p>GrowShare brings the farmer's market to you</p>



    <%= form_tag(root_path, method: :get) do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag 'Search', name: nil %>
    <% end %>


    </div>
  </div>

<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to item_path(item), :class => "card-link" do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');">
            <div class="card-category">Popular</div>
              <div class="card-description">
                <h2><%= link_to item.name, item_path(item) %></h2>
                <p>Very fresh, the best</p>
              </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/charleseeckhout">
            <!-- <a class="card-link" href="#" ></a> -->
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


<div id="map" style="width: 100%; height: 600px;"></div>



<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
